generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPERADMIN
  ADMIN_CENTER
  TRAINER
  CLEANER
  USER
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

model User {
  id               String         @id @default(cuid())
  email            String         @unique
  name             String
  passwordHash     String
  role             Role           @default(USER)
  status           UserStatus     @default(PENDING)
  profileImageUrl  String? // URL de la imagen de perfil en Cloudinary
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  centerId         String? // Centro actual
  center           Center?        @relation("CurrentCenter", fields: [centerId], references: [id], onDelete: SetNull)
  favoriteCenterId String? // Centro favorito
  favoriteCenter   Center?        @relation("FavoriteCenter", fields: [favoriteCenterId], references: [id], onDelete: SetNull)
  classes          GymClass[] // Clases a las que asiste como usuario
  trainedClasses   ClassTrainer[] @relation("ClassTrainer") // Clases que enseña como entrenador
  notifications    Notification[]
  workouts         Workout[] @relation("UserWorkouts") // Entrenamientos del usuario
  diets            Diet[] @relation("UserDiets") // Dietas del usuario
}

// ... (modelos Center, GymClass, Machine iguales)

model Notification {
  id        String   @id @default(cuid())
  userId    String // El destinatario de la notificación
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   @default("INFO") // INFO, WARNING, SUCCESS, ERROR
  link      String? // Enlace opcional (ej: /users/123)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Center {
  id             String                @id @default(cuid())
  name           String                @unique
  description    String?
  address        String?
  city           String?
  country        String?
  phone          String?
  email          String?
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
  currentUsers   User[]                @relation("CurrentCenter")
  favoriteUsers  User[]                @relation("FavoriteCenter")
  machines       Machine[]
  classSchedules ClassCenterSchedule[] @relation("ClassSchedules")
  tickets        Ticket[]              @relation("CenterTickets")
}

// Modelo de máquina (tipo/categoría): ej. "Cinta", "Pesas", etc.
model MachineType {
  id        String     @id @default(cuid())
  name      String // Nombre del modelo: "Cinta", "Pesas", etc.
  type      String // Categoría: "cardio", "fuerza", "peso libre", "funcional", "otro"
  machines  Machine[]
  exercises Exercise[] @relation("MachineTypeExercises") // Ejercicios relacionados con este tipo de máquina
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([name, type]) // No puede haber dos tipos con mismo nombre y categoría
}

// Instancia de máquina en un centro específico
model Machine {
  id             String      @id @default(cuid())
  machineTypeId  String // Referencia al modelo de máquina
  machineType    MachineType @relation(fields: [machineTypeId], references: [id], onDelete: Cascade)
  instanceNumber Int // Número de instancia: 1, 2, 3... (para generar "Cinta 1", "Cinta 2", etc.)
  status         String // Estado: "operativa", "en mantenimiento", "fuera de servicio"
  centerId       String
  center         Center      @relation(fields: [centerId], references: [id], onDelete: Cascade)
  maxUsers       Int? // Número máximo de usuarios que pueden usar esta instancia simultáneamente
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@unique([machineTypeId, centerId, instanceNumber]) // No puede haber dos instancias con el mismo número en el mismo centro
  @@index([centerId])
  @@index([machineTypeId])
}

model GymClass {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Usuarios que asisten a la clase
  users User[]

  // Entrenadores que enseñan la clase (mínimo 1)
  trainers ClassTrainer[]

  // Horarios de la clase en diferentes centros
  schedules ClassCenterSchedule[]
}

// Relación entre clases y entrenadores (mínimo 1 entrenador por clase)
model ClassTrainer {
  id        String   @id @default(cuid())
  classId   String
  trainerId String
  class     GymClass @relation(fields: [classId], references: [id], onDelete: Cascade)
  trainer   User     @relation("ClassTrainer", fields: [trainerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([classId, trainerId])
  @@index([classId])
  @@index([trainerId])
}

// Horarios de una clase en un centro específico
// Una clase puede tener diferentes horarios en diferentes centros
model ClassCenterSchedule {
  id        String   @id @default(cuid())
  classId   String
  centerId  String
  dayOfWeek Int // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado
  startTime String // Formato HH:mm (ej: "09:00")
  endTime   String // Formato HH:mm (ej: "10:30")
  class     GymClass @relation(fields: [classId], references: [id], onDelete: Cascade)
  center    Center   @relation("ClassSchedules", fields: [centerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([classId])
  @@index([centerId])
  @@index([classId, centerId])
}

// Tickets de contacto desde la página pública
model Ticket {
  id          String    @id @default(cuid())
  name        String // Nombre del contacto
  email       String // Email del contacto
  phone       String? // Teléfono móvil (opcional)
  centerId    String // Centro al que se dirige el ticket
  center      Center    @relation("CenterTickets", fields: [centerId], references: [id], onDelete: Cascade)
  subject     String // Asunto del ticket
  description String // Descripción/mensaje
  attachments String[] // URLs de archivos adjuntos (fotos y PDFs)
  status      String    @default("pending") // pending, in_progress, completed
  completedAt DateTime? // Fecha de completado
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([centerId])
  @@index([status])
  @@index([createdAt])
}

// Banco de ejercicios disponibles
model Exercise {
  id            String            @id @default(cuid())
  name          String
  description   String?
  instructions  String? // Instrucciones de cómo realizar el ejercicio
  imageUrl      String? // URL de imagen del ejercicio
  videoUrl      String? // URL de video del ejercicio
  machineTypeId String? // Ejercicio relacionado con un tipo de máquina (opcional)
  machineType   MachineType?      @relation("MachineTypeExercises", fields: [machineTypeId], references: [id], onDelete: SetNull)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  workoutExercises WorkoutExercise[] // Ejercicios usados en entrenamientos

  @@index([machineTypeId])
}

// Entrenamiento de un usuario
model Workout {
  id          String            @id @default(cuid())
  userId      String
  user        User              @relation("UserWorkouts", fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  exercises   WorkoutExercise[] // Ejercicios del entrenamiento

  @@index([userId])
}

// Ejercicios en un entrenamiento con datos específicos
model WorkoutExercise {
  id          String   @id @default(cuid())
  workoutId   String
  workout     Workout  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exerciseId  String
  exercise    Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  dayOfWeek   Int      // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado
  order       Int      // Orden del ejercicio en el día (para arrastrar y soltar)
  sets        Int?     // Número de series
  reps        Int?     // Número de repeticiones
  weight      Float?   // Peso en kg
  duration    Int?     // Duración en segundos (para ejercicios de tiempo)
  restSeconds Int?     // Descanso entre series en segundos
  notes       String?  // Notas adicionales
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([workoutId])
  @@index([exerciseId])
  @@index([workoutId, dayOfWeek])
}

// Banco de comidas/recetas disponibles
model Meal {
  id          String     @id @default(cuid())
  name        String     @unique
  description String?
  instructions String? // Instrucciones de preparación
  imageUrl    String? // URL de imagen de la comida
  calories    Float? // Calorías por porción
  protein     Float? // Proteínas en gramos
  carbs       Float? // Carbohidratos en gramos
  fats        Float? // Grasas en gramos
  fiber       Float? // Fibra en gramos
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  dietMeals   DietMeal[] // Comidas usadas en dietas
}

// Dieta de un usuario
model Diet {
  id          String     @id @default(cuid())
  userId      String
  user        User       @relation("UserDiets", fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  meals       DietMeal[] // Comidas de la dieta

  @@index([userId])
}

// Comidas en una dieta con datos específicos
model DietMeal {
  id          String   @id @default(cuid())
  dietId      String
  diet        Diet     @relation(fields: [dietId], references: [id], onDelete: Cascade)
  mealId      String
  meal        Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  dayOfWeek   Int      // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado
  mealType    String   // "desayuno", "almuerzo", "comida", "merienda", "cena"
  order       Int      // Orden de la comida en el día (para arrastrar y soltar)
  quantity    Float?   // Cantidad de porciones
  notes       String?  // Notas adicionales
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dietId])
  @@index([mealId])
  @@index([dietId, dayOfWeek])
}
