generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPERADMIN
  ADMIN_CENTER
  TRAINER
  CLEANER
  USER
}

enum UserStatus {
  PENDING
  ACTIVE
  INACTIVE
}

model User {
  id               String         @id @default(cuid())
  email            String         @unique
  name             String
  passwordHash     String
  role             Role           @default(USER)
  status           UserStatus     @default(PENDING)
  profileImageUrl  String? // URL de la imagen de perfil en Cloudinary
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
  centerId         String? // Centro actual
  center           Center?        @relation("CurrentCenter", fields: [centerId], references: [id], onDelete: SetNull)
  favoriteCenterId String? // Centro favorito
  favoriteCenter   Center?        @relation("FavoriteCenter", fields: [favoriteCenterId], references: [id], onDelete: SetNull)
  classes          GymClass[] // Clases a las que asiste como usuario
  trainedClasses   ClassTrainer[] @relation("ClassTrainer") // Clases que enseña como entrenador
  notifications    Notification[]
}

// ... (modelos Center, GymClass, Machine iguales)

model Notification {
  id        String   @id @default(cuid())
  userId    String // El destinatario de la notificación
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  read      Boolean  @default(false)
  type      String   @default("INFO") // INFO, WARNING, SUCCESS, ERROR
  link      String? // Enlace opcional (ej: /users/123)
  createdAt DateTime @default(now())

  @@index([userId])
}

model Center {
  id             String                @id @default(cuid())
  name           String                @unique
  description    String?
  address        String?
  city           String?
  country        String?
  phone          String?
  email          String?
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
  currentUsers   User[]                @relation("CurrentCenter")
  favoriteUsers  User[]                @relation("FavoriteCenter")
  machines       Machine[]
  classSchedules ClassCenterSchedule[] @relation("ClassSchedules")
}

// Modelo de máquina (tipo/categoría): ej. "Cinta", "Pesas", etc.
model MachineType {
  id        String    @id @default(cuid())
  name      String // Nombre del modelo: "Cinta", "Pesas", etc.
  type      String // Categoría: "cardio", "fuerza", "peso libre", "funcional", "otro"
  machines  Machine[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([name, type]) // No puede haber dos tipos con mismo nombre y categoría
}

// Instancia de máquina en un centro específico
model Machine {
  id             String      @id @default(cuid())
  machineTypeId  String // Referencia al modelo de máquina
  machineType    MachineType @relation(fields: [machineTypeId], references: [id], onDelete: Cascade)
  instanceNumber Int // Número de instancia: 1, 2, 3... (para generar "Cinta 1", "Cinta 2", etc.)
  status         String // Estado: "operativa", "en mantenimiento", "fuera de servicio"
  centerId       String
  center         Center      @relation(fields: [centerId], references: [id], onDelete: Cascade)
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  @@unique([machineTypeId, centerId, instanceNumber]) // No puede haber dos instancias con el mismo número en el mismo centro
  @@index([centerId])
  @@index([machineTypeId])
}

model GymClass {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Usuarios que asisten a la clase
  users User[]

  // Entrenadores que enseñan la clase (mínimo 1)
  trainers ClassTrainer[]

  // Horarios de la clase en diferentes centros
  schedules ClassCenterSchedule[]
}

// Relación entre clases y entrenadores (mínimo 1 entrenador por clase)
model ClassTrainer {
  id        String   @id @default(cuid())
  classId   String
  trainerId String
  class     GymClass @relation(fields: [classId], references: [id], onDelete: Cascade)
  trainer   User     @relation("ClassTrainer", fields: [trainerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([classId, trainerId])
  @@index([classId])
  @@index([trainerId])
}

// Horarios de una clase en un centro específico
// Una clase puede tener diferentes horarios en diferentes centros
model ClassCenterSchedule {
  id        String   @id @default(cuid())
  classId   String
  centerId  String
  dayOfWeek Int // 0 = Domingo, 1 = Lunes, ..., 6 = Sábado
  startTime String // Formato HH:mm (ej: "09:00")
  endTime   String // Formato HH:mm (ej: "10:30")
  class     GymClass @relation(fields: [classId], references: [id], onDelete: Cascade)
  center    Center   @relation("ClassSchedules", fields: [centerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([classId])
  @@index([centerId])
  @@index([classId, centerId])
}
